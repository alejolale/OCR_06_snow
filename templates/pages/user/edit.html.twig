{% extends 'base.html.twig' %}

{% block title %}Snow tricks || edition de l'utilisateur{% endblock %}

{% block body %}
    <div class="container p-4 md:w-1/2 m-auto">
        <h1 class="title">Edition de profil</h1>

        {% for message in app.flashes('success')%}
            <div class="success" >
                {{ message}}
            </div>
        {% endfor %}

        {% if error is defined %}
            <div class="bg-red-100 rounded-lg py-5 px-6 mb-4 text-base text-red-700 mb-3" role="alert">{{ error }}</div>
        {% endif %}

        <div class="mt-10">
            {{ form(form) }}
        </div>
    </div>
{% endblock %}
