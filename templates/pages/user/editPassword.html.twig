{% extends 'base.html.twig' %}

{% block title %}Snow tricks || edition du mot de passe{% endblock %}

{% block body %}
    <div class="container p-4 md:w-1/2 m-auto">
        <h1 class="title">Edition du mot de passe de l'utilisateur</h1>

        {% for message in app.flashes('warning')%}
            <div class="mt-4 bg-red-100 rounded-lg py-5 px-6 mb-4 text-base text-red-700" >
                {{ message}}
            </div>
        {% endfor %}

        <div class="mt-10">
            {{ form(form) }}
        </div>
    </div>
{% endblock %}
