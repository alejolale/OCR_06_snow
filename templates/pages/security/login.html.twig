{% extends 'base.html.twig' %}

{% block title %}Snow tricks || connexion{% endblock %}

{% block body %}
<div class="container p-4 md:w-1/2 m-auto">
    <h1 class="title">Formulaire de connexion</h1>

    {% for message in app.flashes('success')%}
        <div class="success" >
            {{ message}}
        </div>
    {% endfor %}

    {% if error %}
        <div class="mt-4 bg-red-100 rounded-lg py-5 px-6 mb-4 text-base text-red-700" role="alert">{{ error.messageKey|trans(error.messageData, 'security')}}</div>
    {% endif %}

    <form action="{{ path('security.login') }}" method="post" class="mt-8">
        <div class="flex justify-center flex-col">
            <div class="mb-3">
                <label for="username" class="label">Adresse email</label>
                <input type="text"
                       value="{{ last_username }}"
                       class="input"
                       id="username"
                       name="_username"
                       placeholder="example@snowtricks.fr"
                />
            </div>
            <div class="mb-3">
                <label for="password" class="label">Mot de passe</label>
                <input type="password" class="input"
                       id="password"
                       name="_password"
                       placeholder="password"
                />
            </div>
        </div>
        <div class="flex-col text-center mt-8">
            <button type="submit" class="btn">Se connecter</button>
            <div class="mt-4">
                <a href="/forgotten" class="link">Mot de passe oubli√©e</a>
            </div>
        </div>
    </form>
    
</div>
{% endblock %}
