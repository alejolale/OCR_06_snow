{%extends "base.html.twig"%}

{% block title %}Snow tricks || Inscription{% endblock %}

{% block body %}
    <div class="container p-4 md:w-1/2 m-auto">
        <h1 class="title">Formulaire d'inscription</h1>

        {% if error is defined %}
            <div class="bg-red-100 rounded-lg py-5 px-6 mb-4 text-base text-red-700 mb-3" role="alert">{{ error }}</div>
        {% endif %}

        <div class="mt-10">
            {{ form(form) }}
        </div>
    </div>
{% endblock %}
